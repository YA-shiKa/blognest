<%- include('partials/header', { title: 'Register', user: user }) %>

<style>
  body {
    background-image: url('https://www.google.com/imgres?q=image%20mix%20of%20green%20and%20brown%20like%20in%20woods%20for%20a%20site&imgurl=https%3A%2F%2Fimages.pexels.com%2Fphotos%2F16980767%2Fpexels-photo-16980767%2Ffree-photo-of-a-path-in-a-forest.jpeg%3Fauto%3Dcompress%26cs%3Dtinysrgb%26dpr%3D1%26w%3D500&imgrefurl=https%3A%2F%2Fwww.pexels.com%2Fphoto%2Fbrown-trees-on-the-field-11193458%2F&docid=7j3Ir3QUwR6SmM&tbnid=If9G5xMSfmALaM&vet=12ahUKEwiW1NL0qs6OAxW8nq8BHeKUALUQM3oECEQQAA..i&w=500&h=333&hcb=2&itg=1&ved=2ahUKEwiW1NL0qs6OAxW8nq8BHeKUALUQM3oECEQQAA');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  }

  .card {
    border-radius: 1rem;
    background-color: rgba(255, 255, 255, 0.9);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.3);
  }

  .card-header {
    border-top-left-radius: 1rem;
    border-top-right-radius: 1rem;
    text-align: center;
    background-color: #000 !important; /* Changed from bg-primary to black */
    color: white;
  }

  .form-control {
    border-radius: 0.5rem;
  }

  .form-label {
    font-weight: 500;
  }

  .btn-primary {
    background-color: #000 !important; /* Changed from blue to black */
    border-color: #000 !important;
    border-radius: 0.5rem;
    font-weight: bold;
  }

  .btn-primary:hover {
    background-color: #333 !important;
    border-color: #333 !important;
  }
</style>

<div class="d-flex align-items-center justify-content-center vh-100">
  <div class="col-lg-4 col-md-6 col-sm-10">
    <div class="card">
      <div class="card-header">
        <h2 class="mb-0">Create an Account</h2>
      </div>
      <div class="card-body">
        <% if (error) { %>
        <div class="alert alert-danger" role="alert"><%= error %></div>
        <% } %>

        <form action="/auth/register" method="POST">
          <div class="mb-3">
            <label for="username" class="form-label">Username</label>
            <input
              type="text"
              class="form-control"
              name="username"
              id="username"
              placeholder="Enter your username"
              required
            />
          </div>

          <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input
              type="email"
              class="form-control"
              name="email"
              id="email"
              placeholder="you@example.com"
              required
            />
          </div>

          <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input
              type="password"
              class="form-control"
              name="password"
              id="password"
              placeholder="Create a password"
              required
            />
          </div>

          <button type="submit" class="btn btn-primary w-100">
            <i class="fas fa-user-plus me-1"></i> Register
          </button>
        </form>

        <div class="mt-3 text-center">
  <p>Already have an account?
    <a href="/auth/login" style="color: black; font-weight: bold;">Login</a>
  </p>
</div>

      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
