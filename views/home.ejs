<%- include('partials/header', { title: 'Home', user: user }) %>

<!-- Hero Section -->
<div
  class="hero-section text-center d-flex align-items-center justify-content-center vh-100 text-white"
  style="
    background-image: url('https://images.unsplash.com/photo-1515378960530-7c0da6231fb1');
    background-size: cover;
    background-position: center;
    position: relative;
  "
>
  <div
    style="
      background-color: rgba(0, 0, 0, 0.6);
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
    "
  ></div>
  <div class="container" style="position: relative">
    <h1 class="display-3 font-weight-bold mb-4">Welcome to BlogNest</h1>
    <p class="lead mb-4">Where ideas take flight, and voices are heard</p>
    <% if (user) { %>
    <p class="mb-4">
      Hey there,
      <span class="username font-weight-bold"><%= user.username %></span>!  
      Glad to see you back in the nest!
    </p>
    <a class="btn btn-primary btn-lg mr-2" href="/user/profile"
      ><i class="fas fa-user"></i> Dive into your profile</a
    >
    <% } else { %>
    <p class="mb-4">
      Ready to share your voice?
      <a class="btn btn-primary btn-lg mr-2" href="/auth/login"
        ><i class="fas fa-sign-in-alt"></i> Log In</a
      >
      or
      <a class="btn btn-warning btn-lg" href="/auth/register"
        ><i class="fas fa-user-plus"></i> Join Now</a
      >
      and become a creator.
    </p>
    <% } %>
  </div>
</div>

<!-- Features Section -->
<div class="container-fluid mt-5">
  <h1 class="text-center font-weight-bold mb-4">Powerful Features at Your Fingertips</h1>
  <div class="row">
    <div class="col-md-4">
      <div class="card text-center shadow-sm">
        <div class="card-body">
          <i class="fas fa-lock fa-3x mb-3" style="color: #ff6f61"></i>
          <h3 class="card-title">Rock-Solid Security</h3>
          <p class="card-text">
            Your stories are safe with us — protected by a robust authentication system.
          </p>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card text-center shadow-sm">
        <div class="card-body">
          <i class="fas fa-user-shield fa-3x mb-3" style="color: #6a4c93"></i>
          <h3 class="card-title">Smart Access Control</h3>
          <p class="card-text">
            Customize who can see and do what — you're in full control.
          </p>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card text-center shadow-sm">
        <div class="card-body">
          <i class="fas fa-sign-in-alt fa-3x mb-3" style="color: #ffa600"></i>
          <h3 class="card-title">Seamless Login</h3>
          <p class="card-text">
            Jump back into the conversation with lightning-fast login.
          </p>
        </div>
      </div>
    </div>
  </div>

  <div class="row mt-4">
    <div class="col-md-4">
      <div class="card text-center shadow-sm">
        <div class="card-body">
          <i class="fas fa-sign-out-alt fa-3x mb-3" style="color: #ff6f61"></i>
          <h3 class="card-title">One-Click Logout</h3>
          <p class="card-text">
            Done for the day? Log out securely and effortlessly with a tap.
          </p>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card text-center shadow-sm">
        <div class="card-body">
          <i class="fas fa-comments fa-3x mb-3" style="color: #6a4c93"></i>
          <h3 class="card-title">Dynamic Comments</h3>
          <p class="card-text">
            Spark conversations, build community — every comment counts!
          </p>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card text-center shadow-sm">
        <div class="card-body">
          <i class="fas fa-upload fa-3x mb-3" style="color: #ffa600"></i>
          <h3 class="card-title">Effortless Uploads</h3>
          <p class="card-text">
            Share your content in bulk — drag, drop, and post with ease.
          </p>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
